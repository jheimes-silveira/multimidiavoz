<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:orientation="vertical"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:weightSum="1">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="72dp"
            android:layout_height="72dp">
            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/img_exer"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"
                android:layout_gravity="center_vertical"
                android:id="@+id/adapter_lv_view_profile_img" />
        </LinearLayout>


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_weight="50"
                    android:layout_width="match_parent"
                    android:layout_gravity="left"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:padding="6dp"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/adapter_lv_view_profile_tv_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top|center_vertical"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        android:gravity="center_vertical"
                        android:text="Nome"
                        />
                    <TextView
                        android:id="@+id/adapter_lv_view_profile_tv_description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="12dp"
                        android:layout_centerVertical="true"
                        />
                    <TextView
                        android:id="@+id/adapter_lv_view_profile_tv_category"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="12dp"
                        android:layout_centerVertical="true"
                        />
                </LinearLayout>
                <ImageView
                    android:layout_weight="0.5"
                    android:id="@+id/adapter_lv_view_profile_btn_add_user"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="10dp"
                    android:src="@mipmap/icon_atender"
                    android:layout_gravity="center" />
            </LinearLayout>
            
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
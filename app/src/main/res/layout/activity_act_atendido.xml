<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_act_atendido"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="br.org.multimidia.multimidiavoz.view.ActAtendido"
    android:background="@color/colorPapelParedeAtendido">
    <net.majorkernelpanic.streaming.gl.SurfaceView
        android:id="@+id/surface"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>


        <TextView
            android:text="Nome do usuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvNome"
            android:layout_weight="0.00"
            android:gravity="center"
            android:textSize="@dimen/font_30dp"
            android:textColor="@color/colorBranco"
            android:layout_marginTop="122dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:text="telefone 00000000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvNumero"
            android:textColor="#CCC"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/tvNome"
            android:layout_alignParentStart="true" />

        <com.github.clans.fab.FloatingActionButton
            android:layout_width="match_parent"
            android:layout_height="80dp"
            app:srcCompat="@mipmap/icon_desligar"
            android:id="@+id/btnDesligar"
            android:layout_weight="0.00"
            android:src="@drawable/phone_minus"
            android:layout_gravity="bottom"
            android:layout_marginBottom="16dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />



</RelativeLayout>

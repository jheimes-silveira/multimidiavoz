<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_act_cadastro"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="br.org.multimidia.multimidiavoz.ActCadastro"
    android:background="@mipmap/papel_parede_cadastro">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@mipmap/logo_multimidia"
            android:id="@+id/imageView"
            android:layout_weight="0.03" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editTextNome"
            android:hint="Nome"
            android:textColorHint="#F5F5F5"
            android:layout_marginTop="50dp"
            android:background="#725A74"
            android:layout_weight="0.03"
            android:padding="15dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:ems="10"
            android:id="@+id/editTextTelefone"
            android:hint="Telefone"
            android:textColorHint="#F5F5F5"
            android:layout_marginTop="5dp"
            android:background="#725A74"
            android:layout_weight="0.03"
            android:padding="15dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/editTextSenha"
            android:hint="Senha"
            android:textColorHint="#F5F5F5"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="#725A74"
            android:layout_weight="0.03"
            android:padding="15dp"
            android:layout_marginTop="5dp" />

        <Button
            android:text="Cadastrar"
            android:id="@+id/button"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_height="60dp"
            android:layout_weight="0.04"
            android:layout_width="match_parent"
            android:alpha="0.8"
            android:textColor="#000000"
            />

        <TextView
            android:text="JÃ¡ cadastrado? Entrar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            android:layout_weight="0.03"
            android:textAlignment="center"
            android:textColor="#F5F5F5"
            android:layout_marginTop="10dp" />

    </LinearLayout>

</RelativeLayout>
